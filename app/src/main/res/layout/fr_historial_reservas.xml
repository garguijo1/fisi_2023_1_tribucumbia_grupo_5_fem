<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#FAFAFA"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:layout_marginTop="176dp"
        android:background="#FFFFFF"
        android:backgroundTint="#FAFAFA"
        android:fontFamily="@font/lato_bold"
        android:textColor="#7E0000"
        android:textSize="48sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Reservas" />

    <TextView
        android:id="@+id/laBistecca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="44dp"
        android:fontFamily="@font/lato_bold"
        android:textColor="#7E0000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="LA BISTECCA" />

    <TextView
        android:id="@+id/pastaGrill"
        android:layout_width="69dp"
        android:layout_height="18dp"
        android:layout_marginStart="261dp"
        android:layout_marginEnd="44dp"
        android:fontFamily="@font/lato"
        android:textColor="#6C6C6C "
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.604"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/laBistecca"
        tools:text="Pasta-Grill" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cate_plat"
        android:layout_width="300dp"
        android:layout_height="115dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        app:cardBackgroundColor="#EFF5CD"
        app:cardCornerRadius="30dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView17">

        <TextView
            android:id="@+id/cod_reserva"
            android:layout_width="90dp"
            android:layout_height="23dp"
            android:fontFamily="@font/lato_bold"
            android:textColor="#000000"
            android:textSize="24sp"
            android:translationX="30dp"
            android:translationY="15dp"
            tools:text="#41045" />

        <Button
            android:id="@+id/reserva_platillo"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/lato_bold"
            android:textAllCaps="false"
            android:textColor="#0E0C0C"
            android:textSize="12sp"
            android:translationX="150dp"
            android:translationY="20dp"
            tools:ignore="TouchTargetSizeCheck"
            tools:text="Reservar Platillo" />

        <Button
            android:id="@+id/detalla_reserva"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/lato_bold"
            android:textAllCaps="false"
            android:textColor="#0E0C0C"
            android:textSize="12sp"
            android:translationX="150dp"
            android:translationY="55dp"
            tools:ignore="TouchTargetSizeCheck"
            tools:text="Detallar Reserva" />

        <TextView
            android:id="@+id/TextViewDataHoraReserva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:textColor="#353333"
            android:textSize="14sp"
            android:translationX="30dp"
            android:translationY="50dp"
            tools:text="08:00 P.M " />

        <TextView
            android:id="@+id/textViewDataFechaReserva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:textColor="#353333"
            android:textSize="14sp"
            android:translationX="30dp"
            android:translationY="75dp"
            tools:text="06 nov 2022 " />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>